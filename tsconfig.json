{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "module": "NodeNext",
    "moduleResolution": "Node",
    "target": "ES2020"
  },
  "include": [
    "src/**/*",
    "playwright.config.ts",
    "playwright.prod.config.ts",
    "**/*.spec.ts",
    "./global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "allure-report",
    "allure-results",
    "playwright-report",
    "test-results"
  ]
}
